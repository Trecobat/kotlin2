<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/tachesFragment">

    <fragment
        android:id="@+id/pointagesFragment"
        android:name="com.trecobat.pointagetrecopro.ui.pointages.PointagesFragment"
        android:label="Pointages"
        tools:layout="@layout/pointages_fragment" >
        <action
            android:id="@+id/action_pointagesFragment_to_pointageDetailFragment"
            app:destination="@id/pointageDetailFragment" />

    </fragment>
    <fragment
        android:id="@+id/pointageDetailFragment"
        android:name="com.trecobat.pointagetrecopro.ui.pointagedetail.PointageDetailFragment"
        android:label="Pointage Detail"
        tools:layout="@layout/pointage_detail_fragment" />


    <fragment
        android:id="@+id/tachesFragment"
        android:name="com.trecobat.pointagetrecopro.ui.taches.TachesFragment"
        android:label="Taches"
        tools:layout="@layout/taches_fragment" >
        <action
            android:id="@+id/action_tachesFragment_to_tacheDetailFragment"
            app:destination="@id/tacheDetailFragment" />
        <action
            android:id="@+id/action_tachesFragment_refresh"
            app:destination="@id/tachesFragment" />

    </fragment>
    <fragment
        android:id="@+id/tacheDetailFragment"
        android:name="com.trecobat.pointagetrecopro.ui.tachedetail.TacheDetailFragment"
        android:label="Tache Detail"
        tools:layout="@layout/tache_detail_fragment" >
        <action
            android:id="@+id/action_tacheDetailFragment_refresh"
            app:destination="@id/tacheDetailFragment" />
    </fragment>
</navigation>